{
  "name": "hevy-analytics",
  "version": "0.1.1",
  "private": true,
  "main": "main.cjs",
  "type": "commonjs",
  "scripts": {
    "dev": "npm run dev:electron",
    "start": "electron .",

    "build:frontend": "cd ../frontend && npm run build",

    "dist": "npm run build:frontend && electron-builder",
    "dist:mac": "npm run build:frontend && electron-builder --mac",

    "dev:backend": "node scripts/start-backend.js",
    "dev:frontend": "cd ../frontend && npm run dev -- --host localhost --port 5173",
    "dev:electron": "concurrently -k -n BACKEND,FRONTEND,ELECTRON -c auto \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on --httpTimeout 2000 --timeout 60000 http-get://127.0.0.1:8000/health http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "dev:electron:fe": "concurrently -k -n FRONTEND,ELECTRON -c auto \"npm run dev:frontend\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.saggio.hevyanalytics",
    "productName": "HevyAnalytics",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend/dist"
      },
      {
        "from": "../backend/dist/hevy-backend",
        "to": "backend/hevy-backend"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    }
  }
}
